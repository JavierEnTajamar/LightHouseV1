@using LightHouseV1.Models
@model AccountRegisterViewModel

    <div class="text-center">
        <p>EL LOGO DE TU CANAL AQUÍ</p>
        <img src="~/images/twitchLogo.png" style="width: 50%; height:50%"/> <br />        

        <h2>User Registration</h2>

        <form asp-action="Register" asp-controller="Account" method="post" >
            <div asp-validation-summary="All"></div>
            <label asp-for="Email"></label> <br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
            <br />            
            <label asp-for="Password"></label> <br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
            <br />
            <label asp-for="ConfirmPassword"></label> <br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
            <br />
            <button class="btn btn-success m-1 text-black-50" type="submit">Register</button>
        </form>
    </div>
