@model IEnumerable<LightHouseV1.Models.Template>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success m-1 text-black-50" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TemplateName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TemplateName)
            </td>
            <td>
                <a class="btn btn-success m-1 text-black-50" asp-action="Edit" asp-route-id="@item.TemplateId">Edit</a> |
                <a class="btn btn-primary m-1 text-black-50" asp-action="Details" asp-route-id="@item.TemplateId">Details</a> |
                <a class="btn btn-danger m-1 text-black-50" asp-action="Delete" asp-route-id="@item.TemplateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
